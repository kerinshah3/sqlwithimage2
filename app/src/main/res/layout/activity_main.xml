<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/username_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="125dp"
        android:hint="Enter UserName Here"
        android:padding="12dp" />

    <EditText
        android:id="@+id/score_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/username_txt"
        android:layout_alignLeft="@+id/username_txt"
        android:layout_centerVertical="true"
        android:hint="Enter Score Here"
        android:inputType="number"
        android:padding="12dp" />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/username_txt"
        android:layout_alignStart="@+id/username_txt"
        android:layout_alignLeft="@+id/username_txt"
        android:layout_marginTop="22dp"
        android:ems="10"
        android:inputType="date" />

    <Button
        android:id="@+id/viewDatabase_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/submit_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="61dp"
        android:text="View Database" />

    <Button
        android:id="@+id/submit_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/score_txt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp"
        android:text="Submit" />


</RelativeLayout>